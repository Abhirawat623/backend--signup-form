{
    "version": 2,
    "builds": [
      {
        "src": "/backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "/frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "zeroConfig": true,
          "framework": "create-react-app"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/server.js"
      },
      {
        "source": "/:file*",
        "destination": "/frontend/:file"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend/"
      }
    ]
  }